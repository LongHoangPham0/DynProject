@using BlueMoon.DynWeb.Entities;
@model Account
@{
    ViewBag.Title = "Log in";
}
<script>
    if (window.self !== window.top) window.top.location.href = window.location.href;
    function doIt() {
        var pp = document.createElement('button');
        document.body.appendChild(pp);
    }
    
</script>
@using (Html.BeginForm("index", "login", new { returnUrl = Request["ReturnUrl"] }, FormMethod.Post, new { @class = "form-signin", autocomplete = "off" }))
{
       <label class="fas fa-key"> User Credential</label>
        @Html.ValidationSummary(true)
       <div class="form-group">
           @Html.TextBoxFor(m => m.Username, new { @class = "form-control", @placeholder = "Account", @required = "required" })
        </div>
        <div class="form-group">
            @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @placeholder = "Key", @type = "password", @required = "required" })
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary fas fa-sign-out-alt"> Log in</button>
        </div>
}

