@using BlueMoon.DynWeb.Models
@model SystemModel
@{
    ViewBag.Title = "Permissions";
}
<div class="list-item-type">
    <h4>Permission list</h4>
    <a href="@Url.Action("managepermission","system")" class="btn btn-primary">New permission</a>
</div>

@using (Html.BeginForm("DeletePermission", "System", FormMethod.Post))
{
    <table class="table table-bordered table-system">
        <tr>
            <th style="width: 90%">Permission code</th>
            <th style="width: 10%"></th>
        </tr>
        @if (Model.ListPermission != null)
        {
            foreach (var item in Model.ListPermission)
            {
                <tr>
                    <td>
                        <a href="@Url.Action("managepermission", "system")?_sq=true&permission.id=@item.ID">@item.Name</a>
                    </td>
                    <td>
                        <button type="submit" class="btn btn-danger" name="ID" value="@item.ID" >Delete</button>
                    </td>
                </tr> 
            }
        }
        else
        {
            <tr>
                <td>No items</td>
                <td></td>
            </tr>
        }
    </table>
}
